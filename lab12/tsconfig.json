{
    "compilerOptions": {
      "target": "ES2018",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "resolveJsonModule": true,
      "types": ["node", "cucumber"]
    },
    "include": [
      "**/*.ts"
    ]
  }